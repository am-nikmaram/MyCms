@using MyCms.DomainClasses.Page
@using MyCms.Utilities.Convertor
@{ 
    ViewData["Title"] = "Index";
    List<Page> Sliders = ViewData["Slider"] as List<Page>;
}



<!-- slider -->
@if (Sliders.Any())
{

<div class="news-slider border-radius">
    <div id="slider-one" class="owl-carousel">
        @foreach (var item in Sliders)
        {
        <!-- each item -->
        <div class="item">
            <img src="~/PageImages/@item.ImageName">
            <div class="left-side">
                <h2> <a href="">@item.PageTags</a> </h2>
                <p>
                    @item.ShortDescription
                </p>
                <span> <i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi()</span>
            </div>
            <div class="clearfix"></div>
        </div>
        <!-- end each item -->
        }

    </div>
    <a href="" class="news-archive"> <i class="icons icon-doc-1"></i> آرشیو کامل خبرها </a>
</div>
}
